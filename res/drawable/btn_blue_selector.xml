<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false"><shape>
            <solid android:color="@color/btn_blue_normal" />

            <corners android:radius="@dimen/dp_4" />

            <stroke android:dashWidth="@dimen/dp_0" android:width="@dimen/dp_0" />
        </shape></item>
    <item android:state_pressed="true"><shape> 
            <solid android:color="@color/btn_blue_pressed" />

            <corners android:radius="@dimen/dp_4" />

            <stroke android:dashWidth="@dimen/dp_0" android:width="@dimen/dp_1" android:color="@android:color/white" />
        </shape></item>

</selector>