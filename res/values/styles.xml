<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base theme -->
    <style name="AppBaseTheme" parent="android:Theme.Light" />

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Base style -->
    <style name="baseStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="match_warp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="match_match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="match_parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="wrap_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- All listView style -->
    <style name="listView" parent="@style/baseStyle">
        <item name="android:focusable">true</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:scrollbars">none</item>
        <item name="android:fadeScrollbars">true</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="publish_listview" parent="@style/listView">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Submit button style -->
    <style name="submit_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_44</item>
        <item name="android:background">@drawable/btn_blue_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/silver</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="green_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_50</item>
        <item name="android:background">@drawable/btn_blue_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/silver</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <!-- EditText bg style -->
    <style name="table_edit" parent="@style/baseStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">left|center</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- TextView bg style -->
    <style name="table_text" parent="@style/baseStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">left|center</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- TextViewm bg style -->
    <style name="table_text_m" parent="@style/baseStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">right|center</item>
        <item name="android:paddingRight">@dimen/dp_5</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- EditText password bg style -->
    <style name="table_edit_pwd" parent="@style/table_edit">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="ic_img" parent="@style/wrap_content">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <!-- About logo style -->
    <style name="about_logo" parent="@style/baseStyle">
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:src">@drawable/logo</item>
    </style>

    <!-- About ver style -->
    <style name="about_ver" parent="@style/baseStyle">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">@dimen/dp_2</item>
        <item name="android:layout_marginTop">@dimen/dp_7</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/deep_gray</item>
    </style>

    <style name="My_dialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/dialog_bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="my_data_main_text" parent="@style/wrap_content">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="MyCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_selector</item>
        <item name="android:paddingLeft">@dimen/dp_2</item>
        <item name="android:maxHeight">@dimen/dp_10</item>
    </style>

    <style name="my_order_detail_btn">
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="money_num">
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_height">@dimen/dp_45</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/white_gray_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="popwindow_delete_btn_anim_style">
        <item name="android:windowEnterAnimation">@anim/delete_btn_show</item>
        <!-- 指定显示的动画xml -->
        <item name="android:windowExitAnimation">@anim/delete_btn_hide</item>
        <!-- 指定消失的动画xml -->

    </style>

    <style name="work_fragemnt_layout" parent="@style/match_warp">
        <item name="android:orientation">vertical</item>
    </style>

    <!-- 每个方框的title -->
    <style name="item_box_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_34</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/basic_info_text_color</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <!-- 每个item分割线 -->
    <style name="item_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_0point4</item>
        <item name="android:background">@color/item_devider</item>
    </style>
    <!-- 每个item分割线 -->
    <style name="top_menu_item_divider">
        <item name="android:layout_width">@dimen/dp_0point4</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/item_devider</item>
    </style>

    <style name="item_week_divider" parent="@style/item_divider">
        <item name="android:layout_marginLeft">@dimen/dp_10</item>
    </style>

    <!-- 我的订单中顶部４个类型的订单 -->
    <style name="order_tab_item">
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/sp_10</item>
        <item name="android:paddingTop">@dimen/dp_3</item>
        <item name="android:paddingBottom">@dimen/dp_5</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="my_order_fragment_list_item_text" parent="@style/wrap_content">
        <item name="android:ellipsize">start</item>
        <item name="android:maxEms">5</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>
    <!-- 首页底部按钮 -->
    <style name="home_bottom_btn">
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/sp_10</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:textColor">@color/text_color</item>
    </style>
    <!-- 首页menu分隔线 -->
    <style name="home_menu_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_0point4</item>
        <item name="android:background">@drawable/pcb_home_menu_line</item>
    </style>

    <style name="my_popupwindow" parent="android:Animation">

        <!-- 进入动画 -->
        <item name="@android:windowEnterAnimation">@anim/head_in</item>
        <!-- 退出时的动画 -->
        <item name="@android:windowExitAnimation">@anim/head_out</item>
    </style>

    <style name="my_bottom_popupwindow" parent="android:Animation">

        <!-- 进入动画 -->
        <item name="@android:windowEnterAnimation">@anim/home_bottom_menu_out</item>
        <!-- 退出时的动画 -->
        <item name="@android:windowExitAnimation">@anim/home_bottom_menu_in</item>
    </style>

    <style name="blue_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_44</item>
        <item name="android:background">@drawable/btn_blue_selector</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/dp_18</item>
    </style>

    <style name="red_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_44</item>
        <item name="android:background">@drawable/btn_red_selector</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/dp_18</item>
    </style>

    <style name="plan_cancel_btn">
        <item name="android:layout_width">@dimen/dp_55</item>
        <item name="android:layout_height">@dimen/dp_26</item>
        <item name="android:background">@drawable/btn_blue_selector</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_marginRight">@dimen/dp_15</item>
        <item name="android:paddingLeft">@dimen/dp_10</item>
        <item name="android:paddingRight">@dimen/dp_10</item>
        <item name="android:text">@string/my_info_btn_cancel</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="week_checkbox" parent="@style/MyCheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <!-- 首页menu -->
    <style name="top_menu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_0</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="dialog_tran" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>
    <!-- 地图上搜索 -->
    <style name="search_with_map_auto_edittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="android:layout_marginLeft">@dimen/dp_10</item>
        <item name="android:layout_marginRight">@dimen/dp_10</item>
        <item name="android:paddingLeft">@dimen/dp_5</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="NumberProgressBar_Default" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:layout_height">@dimen/dp_5</item>
        <item name="android:layout_width">match_parent</item>
        <item name="max">100</item>
        <item name="progress">0</item>
        <item name="progress_unreached_color">#CCCCCC</item>
        <item name="progress_reached_color">#3498DB</item>
        <item name="progress_text_size">10sp</item>
        <item name="progress_text_color">#3498DB</item>
        <item name="progress_reached_bar_height">@dimen/dp_1</item>
        <item name="progress_unreached_bar_height">@dimen/dp_1</item>
    </style>

    <style name="info_item" parent="@style/wrap_content">
        <item name="android:layout_marginLeft">@dimen/dp_15</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/ligth_black</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="order_details_start_end" parent="@style/match_warp">
        <item name="android:layout_marginLeft">@dimen/dp_10</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/item_left_color</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">start</item>
    </style>

</resources>