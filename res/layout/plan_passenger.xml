<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_10"
    android:background="@drawable/item_layout_default"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp_15" >

    <TextView
        android:id="@+id/plan_passenger_info_title"
        style="@style/match_warp"
        android:background="@color/btn_blue_normal"
        android:paddingBottom="@dimen/dp_5"
        android:paddingLeft="@dimen/dp_15"
        android:paddingTop="@dimen/dp_10"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_16" />

    <TextView
        style="@style/wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="center"
        android:text="@string/pick_details_Title"
        android:textSize="@dimen/sp_16" />

    <include
        android:id="@+id/plan_passenger_point_layout"
        layout="@layout/home_plan_item" />

    <include
        android:id="@+id/plan_passenger_time_layout"
        layout="@layout/home_plan_item" />

    <include
        android:id="@+id/plan_passenger_num_money_layout"
        layout="@layout/home_plan_item" />

    <Button
        android:id="@+id/plan_passenger_cancel"
        style="@style/plan_cancel_btn"
        android:layout_marginTop="@dimen/dp_15"
        android:visibility="gone" />

</LinearLayout>