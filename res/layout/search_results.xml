<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tab="http://schemas.android.com/apk/res/com.lepin.activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_bg"
    android:orientation="vertical" >

    <include
        layout="@layout/common_back_operate_title" />
    <!-- title布局 -->

    <com.lepin.widget.TopTabIndicator
        android:id="@+id/indicator_passager_driver"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_61"
        tab:top_left_text="@string/search_find_driver"
        tab:top_right_text="@string/search_find_passager" />

    <android.support.v4.view.ViewPager
        android:id="@+id/searcher_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>