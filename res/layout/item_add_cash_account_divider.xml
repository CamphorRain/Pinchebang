<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout         xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_44"
                        android:background="@drawable/item_layout_default"
                        >
                      <CheckedTextView
                            android:id="@+id/alipay_cash_account_name"
                            style="@style/wrap_content"
                            android:textSize="@dimen/sp_16" 
                            android:paddingLeft="@dimen/dp_11"
                            android:layout_centerVertical="true"
                            />
                      <ImageView
                            android:id="@+id/add_alipay_cash_account_delete_image"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:src="@drawable/pcb_ic_delete"
                            style="@style/wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dp_10"
                             />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.4dp"
                        android:background="@color/item_devider"
                        android:layout_alignParentBottom="true"
                         />
</RelativeLayout>