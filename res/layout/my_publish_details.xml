<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical" >

    <!-- title布局 -->

    <include
        android:id="@+id/my_publish_title"
        layout="@layout/common_back_operate_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/my_publish_title"
        android:layout_marginBottom="5dp"
        android:focusable="false" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- 车辆信息 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/item_layout_default"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/dp_10"
                    android:text="@string/pick_details_car_info"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|right"
                    android:paddingRight="@dimen/dp_10"
                    android:textColor="@color/ligth_gray"
                    android:textSize="16sp" />
            </LinearLayout>
            <!-- 验证信息 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/item_layout_default"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/dp_10"
                    android:text="@string/pick_details_car_vefic"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|right"
                    android:paddingRight="@dimen/dp_10"
                    android:textColor="@color/ligth_gray"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- 牌照 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/item_layout_default"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/dp_10"
                    android:text="@string/pick_details_licence"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|right"
                    android:paddingRight="@dimen/dp_10"
                    android:textColor="@color/ligth_gray"
                    android:textSize="16sp" />
            </LinearLayout>
            <!-- 驾龄 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/item_layout_default"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/dp_10"
                    android:text="@string/pick_details_car_year"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|right"
                    android:paddingRight="@dimen/dp_10"
                    android:textColor="@color/ligth_gray"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- 出发地 -->

            <LinearLayout
                style="@style/match_warp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/item_layout_default"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:paddingLeft="@dimen/dp_10"
                        android:text="@string/pick_details_start_point"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/my_publish_details_start"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|right"
                        android:paddingRight="@dimen/dp_10"
                        android:textColor="@color/ligth_gray"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0point4"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="@color/item_devider" />
                <!-- 终点 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:paddingLeft="@dimen/dp_10"
                        android:text="@string/pick_details_end_point"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/my_publish_details_destination"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|right"
                        android:paddingRight="@dimen/dp_10"
                        android:textColor="@color/ligth_gray"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
            <!-- 编辑信息提示 -->

            <TextView
                android:id="@+id/my_publish_details_edit_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:text="@string/my_publish_details_edit_note"
                android:textSize="13sp" />

            <!-- 时间段 -->

            <LinearLayout
                android:id="@+id/my_publish_details_layout_time"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/item_layout_default"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/dp_10"
                    android:text="@string/publish_period"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/my_publish_details_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableRight="@drawable/arrow"
                    android:gravity="center|right"
                    android:paddingRight="@dimen/dp_10"
                    android:textColor="@color/ligth_gray"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- 出发时间 -->

            <LinearLayout
                style="@style/match_warp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/item_layout_default"
                android:orientation="vertical" >

                <!-- 途经点1 -->

                <LinearLayout
                    android:id="@+id/point1_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:visibility="gone" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:paddingLeft="@dimen/dp_10"
                        android:text="@string/pick_details_through_point"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/my_publish_details_through_point1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|right"
                        android:paddingRight="@dimen/dp_10"
                        android:textColor="@color/ligth_gray"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:id="@+id/my_publish_line"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0point4"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:background="@color/line"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/point2_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:visibility="gone" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:paddingLeft="@dimen/dp_10"
                        android:text="@string/pick_details_through_point"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/my_publish_details_through_point2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|right"
                        android:paddingRight="@dimen/dp_10"
                        android:textColor="@color/ligth_gray"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:id="@+id/line2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0point4"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:background="@color/line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:paddingTop="@dimen/dp_1" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:paddingLeft="@dimen/dp_10"
                        android:text="@string/pick_details_start_date"
                        android:textSize="16sp" />

                    <RelativeLayout
                        android:id="@+id/my_publish_details_start_date_layout"
                        style="@style/match_match" >

                        <TextView
                            android:id="@+id/my_publish_details_start_date"
                            style="@style/match_match"
                            android:layout_toLeftOf="@+id/my_publish_stop_starttime"
                            android:enabled="false"
                            android:gravity="center|right"
                            android:paddingRight="@dimen/dp_10"
                            android:textColor="@color/ligth_gray"
                            android:textSize="16sp" />

                        <CheckBox
                            android:id="@+id/my_publish_stop_starttime"
                            style="@style/MyCheckBox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:enabled="false"
                            android:visibility="gone" />
                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0point4"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="@color/item_devider" />
                <!-- 返程时间 -->

                <LinearLayout
                    android:id="@+id/my_publish_details_backtime_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:layout_gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:paddingLeft="@dimen/dp_10"
                        android:text="@string/pick_details_back_date"
                        android:textSize="16sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <TextView
                            android:id="@+id/my_publish_details_back_date"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toLeftOf="@+id/my_publish_stop_backtime"
                            android:enabled="false"
                            android:gravity="center_vertical|right"
                            android:paddingRight="@dimen/dp_10"
                            android:textColor="@color/ligth_gray"
                            android:textSize="@dimen/sp_16" />

                        <CheckBox
                            android:id="@+id/my_publish_stop_backtime"
                            style="@style/MyCheckBox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:enabled="false"
                            android:visibility="gone" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- 费用 -->

            <LinearLayout
                style="@style/match_warp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/item_layout_default"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48" >

                    <TextView
                        android:id="@+id/tv_cost"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:text="@string/pick_details_cost_note"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/my_publish_details_cost"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/tv_cost"
                        android:background="@null"
                        android:enabled="false"
                        android:gravity="right|center"
                        android:inputType="number"
                        android:maxLength="4"
                        android:paddingRight="@dimen/dp_10"
                        android:singleLine="true"
                        android:textColor="@color/ligth_gray" />
                </RelativeLayout>

                <!-- 搭载人数 -->

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0point4"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="@color/item_devider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:layout_marginLeft="@dimen/dp_10" >

                    <TextView
                        android:id="@+id/my_publish_details_peponum_title"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:text="@string/pick_details_total_people"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/my_publish_details_peponum"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:enabled="false"
                        android:gravity="center|right"
                        android:paddingRight="@dimen/dp_10"
                        android:textColor="@color/ligth_gray"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
            <!-- 备注信息 -->

            <LinearLayout
                android:id="@+id/pick_details_tv_remark_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10" >

                <EditText
                    android:id="@+id/my_publish_details_note"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/item_layout_default"
                    android:enabled="false"
                    android:gravity="top"
                    android:hint="@string/publish_remark"
                    android:lines="4"
                    android:textColor="@color/ligth_gray"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>