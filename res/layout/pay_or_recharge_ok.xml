<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ImageView
        style="@style/wrap_content"
        android:layout_marginTop="@dimen/dp_40"
        android:contentDescription="@string/des"
        android:src="@drawable/ic_ok" />

    <TextView
        android:id="@+id/pay_ok_note"
        style="@style/wrap_content"
        android:layout_marginTop="@dimen/dp_27"
        android:text="@string/pay_ok"
        android:textColor="@color/pay_note_color"
        android:textSize="@dimen/sp_20" />

    <TextView
        android:id="@+id/pay_ok_use_pinchebi_num"
        style="@style/wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="消耗拼车币100个"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/pay_ok_use_alipay_num"
        style="@style/wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:text="使用支付宝支付10.00元"
        android:textColor="@color/black"
        android:visibility="gone"
        android:textSize="@dimen/sp_14" />

    <TextView
        style="@style/wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:text="通过拼车币支付，尝试更多优惠"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_14" />

    <Button
        android:id="@+id/pay_ok_share"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/btn_green_selector"
        android:text="@string/pay_ok_share_btn"
        android:textColor="@color/silver"
        android:textSize="@dimen/sp_21" />

    <Button
        android:id="@+id/pay_ok_back2_plaza"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/btn_white_selector"
        android:text="@string/back_plaza"
        android:textColor="@color/cancel_btn_text_color"
        android:textSize="@dimen/sp_18" />

</LinearLayout>