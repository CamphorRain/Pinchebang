<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_bg1"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:text="@string/time_slot" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/item_layout_default"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="@string/work_days" />

            <CheckBox
                android:id="@+id/week_workday"
                style="@style/week_checkbox"
                android:layout_marginRight="@dimen/dp_10"
                android:checked="true" />
        </RelativeLayout>

        <View style="@style/item_week_divider" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="@string/every_day" />

            <CheckBox
                android:id="@+id/week_all"
                style="@style/week_checkbox"
                android:layout_marginRight="@dimen/dp_10"
                android:checked="false" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:text="@string/single_day" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:focusable="false"
        android:scrollbars="none" >

        <LinearLayout
            style="@style/match_warp"
            android:orientation="vertical" >

            <LinearLayout
                style="@style/match_warp"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/item_layout_default"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="@string/monday" />

                    <CheckBox
                        android:id="@+id/week_monday"
                        style="@style/week_checkbox"
                        android:layout_marginRight="@dimen/dp_10"
                        android:checked="true" />
                </RelativeLayout>

                <View style="@style/item_week_divider" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="@string/tuesday" />

                    <CheckBox
                        android:id="@+id/week_tuesday"
                        style="@style/week_checkbox"
                        android:layout_marginRight="@dimen/dp_10"
                        android:checked="true" />
                </RelativeLayout>

                <View style="@style/item_week_divider" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="@string/wednesday" />

                    <CheckBox
                        android:id="@+id/week_wednesday"
                        style="@style/week_checkbox"
                        android:layout_marginRight="@dimen/dp_10"
                        android:checked="true" />
                </RelativeLayout>

                <View style="@style/item_week_divider" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="@string/thursday" />

                    <CheckBox
                        android:id="@+id/week_thursday"
                        style="@style/week_checkbox"
                        android:layout_marginRight="@dimen/dp_10"
                        android:checked="true" />
                </RelativeLayout>

                <View style="@style/item_week_divider" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="@string/friday" />

                    <CheckBox
                        android:id="@+id/week_friday"
                        style="@style/week_checkbox"
                        android:layout_marginRight="@dimen/dp_10"
                        android:checked="true" />
                </RelativeLayout>

                <View style="@style/item_week_divider" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="@string/saturday" />

                    <CheckBox
                        android:id="@+id/week_saturday"
                        style="@style/week_checkbox"
                        android:layout_marginRight="@dimen/dp_10"
                        android:checked="false" />
                </RelativeLayout>

                <View style="@style/item_week_divider" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="@string/sunday" />

                    <CheckBox
                        android:id="@+id/week_sunday"
                        style="@style/week_checkbox"
                        android:layout_marginRight="@dimen/dp_10"
                        android:checked="false" />
                </RelativeLayout>
            </LinearLayout>

            <Button
                android:id="@+id/week_sure_btn"
                style="@style/blue_btn"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="center"
                android:text="@string/confirm"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>